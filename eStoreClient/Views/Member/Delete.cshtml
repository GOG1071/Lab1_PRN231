@using BusinessObject
@model Member

@{
    ViewBag.Title = "Delete " + Model.CompanyName;
    Layout = "_Layout";
}

<h2>Delete @ViewBag.Title</h2>

<form asp-action="Delete" method="post">
    <input hidden asp-for="MemberId"/>
    <div class="border">
        <div class="mb-3">
            <label asp-for="CompanyName"></label>
            <input disabled asp-for="CompanyName" class="form-control" value="@Model.CompanyName"/>
        </div>
        <div class="mb-3">
            <label asp-for="Email"></label>
            <input disabled asp-for="Email" class="form-control" value="@Model.Email"/>
        </div>
        <div class="mb-3">
            <label asp-for="City"></label>
            <input disabled asp-for="City" class="form-control" value="@Model.City"/>
        </div>
        <div class="mb-3">
            <label asp-for="Country"></label>
            <input disabled asp-for="Country" class="form-control" value="@Model.Country"/>
        </div>

        <button type="submit" class="btn btn-primary">Delete</button>
        <a asp-action="Index">Back to List</a>
    </div>
</form>