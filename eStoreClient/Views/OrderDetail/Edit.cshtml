@using BusinessObject
@model OrderDetail

@{
    ViewBag.Title = "Edit " + Model.OrderId;
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <input hidden asp-for="OrderId"/>
    <div class="border">
        <div class="mb-3">
            <label asp-for="ProductId"></label>
            <input asp-for="ProductId" class="form-control" value="@Model.ProductId"/>
        </div>
        <div class="mb-3">
            <label asp-for="UnitPrice"></label>
            <input asp-for="UnitPrice" class="form-control" value="@Model.UnitPrice"/>
        </div>
        <div class="mb-3">
            <label asp-for="Quantity"></label>
            <input asp-for="Quantity" class="form-control" value="@Model.Quantity"/>
        </div>
        <div class="mb-3">
            <label asp-for="Discount"></label>
            <input asp-for="Discount" class="form-control" value="@Model.Discount"/>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" asp-route-id="@Model.OrderId">Back to List</a>
    </div>
</form>