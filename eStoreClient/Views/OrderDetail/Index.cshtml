@model IEnumerable<BusinessObject.OrderDetail>

@{
    ViewData["Title"] = "Home Page";
}

<h1>Index</h1>

<p><a asp-action="Create">Create new</a></p>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Discount)
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(Model => item.OrderId)</td>
            <td>@Html.DisplayFor(Model => item.ProductId)</td>
            <td>@Html.DisplayFor(Model => item.UnitPrice)</td>
            <td>@Html.DisplayFor(Model => item.Quantity)</td>
            <td>@Html.DisplayFor(Model => item.Discount)</td>
            <td>
                <a asp-controller="OrderDetail" asp-action="Detail" asp-route-Oid="@item.OrderId" asp-route-Pid="@item.ProductId">Detail</a>|
                <a asp-controller="OrderDetail" asp-action="Edit" asp-route-Oid="@item.OrderId" asp-route-Pid="@item.ProductId">Edit</a>|
                <a asp-controller="OrderDetail" asp-action="Delete" asp-route-Oid="@item.OrderId" asp-route-Pid="@item.ProductId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>